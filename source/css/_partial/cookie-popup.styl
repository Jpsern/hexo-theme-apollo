  .cookie-consent
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    font-size: 1em;
    color: #fff;
    background: rgba(0,0,0,.7);
    padding: 2em;
    box-sizing: border-box;
    visibility: hidden;
  
  .cookie-consent.is-show
    visibility: visible;

  .cookie-consent a
    color: #fff !important;

  .cookie-agree
    color: #fff;
    background: dodgerblue;
    padding: .5em 1.5em;

  .cookie-agree:hover
    cursor: pointer;

  .cc-hide1
    display: none;

  .cc-hide2
    animation: hide 1s linear 0s;
    animation-fill-mode: forwards;

  @keyframes hide
    from 
      opacity: 1;
    to
      opacity: 0;
      visibility: hidden;

  @media screen and (max-width: 600px)
    .cookie-consent
      flex-direction: column;
    .cookie-text
      margin-bottom: 1em;
